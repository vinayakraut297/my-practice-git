			</repository>
		</repositories>

  <distributionManagement>  
	<repository>
		<id>nexus</id>
		<name>vinayakraut297 Releases Nexus Repo</name>
		<url>http://35.154.126.7:8081/repository/release-repo/</url>
	</repository>
	
	<snapshotRepository>
		<id>nexus</id>
		<name>vinayakraut297 Snapshots Nexus Repo</name>
